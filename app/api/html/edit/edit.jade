doctype html
html(lang="en")
    head
        title edit movie
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==" crossorigin="anonymous")
        link(rel="stylesheet" href="/styles.css")
    body
        .container
            h1 Edit
            form(name="add-movie", method="post", action="/editmovies/"+movie.$loki)
                div.form-group
                    span.col-sm-2.control-label Title
                    input(type="text", name="title", value=movie.title)
                div.form-group
                    span.col-sm-2.control-label Year
                    input(type="text", name="year", value=movie.year)
                div.form-group
                    span.col-sm-2.control-label Url
                    input(type="text", name="url", value=movie.url)
                div.form-group
                    span.col-sm-2.control-label Director
                    input(type="text", name="director", value=movie.director)
                div.form-group
                    div.col-sm-offset-2.col-sm-10
                        input(type="submit", value="edit").btn.btn-default